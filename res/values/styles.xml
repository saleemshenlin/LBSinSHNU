<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="homeActivity">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="leftBehindMenuScroll">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#000</item>
    </style>

    <style name="rightBehindMenuScroll">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#000</item>
    </style>

    <style name="behindMenuScrollContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="behindMenuItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="behindMenuItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MyTheme.NoActionBar.CustomBackground" parent="@android:Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_welcome</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="searchTheme" parent="android:Theme.Holo.Light">
        <item name="android:icon">@drawable/ic_play_pin</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

</resources>