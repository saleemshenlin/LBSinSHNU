<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_margin="4dp"
    android:background="@drawable/downbutton_corner" >

    <ImageView
        android:id="@+id/imgWLocation"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_play_pin" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtWTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtWDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/app_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#eee"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgWDetail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_action_more_w" />

</LinearLayout>